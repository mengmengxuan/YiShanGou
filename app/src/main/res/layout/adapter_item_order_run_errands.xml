<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@drawable/shape_white_rect_10"
    android:paddingBottom="11dp">

    <ImageView
        android:id="@+id/m_head_iv"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="13dp"
        android:src="@mipmap/icon_run_errands_order_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_alignTop="@id/m_head_iv"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@id/m_head_iv"
        android:gravity="center"
        android:text="跑腿"
        android:textColor="@color/text_black_333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/m_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_alignTop="@id/m_head_iv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:text="已完成"
        android:textColor="@color/text_third_999999"
        android:textSize="14sp" />


    <LinearLayout
        android:id="@+id/m_send_address_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_head_iv"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发货："
            android:textColor="@color/text_third_999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/m_send_address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发货地址"
            android:textColor="@color/text_black_333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/m_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0"
            android:textColor="@color/text_black_333333"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/m_receive_address_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_send_address_ll"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货："
            android:textColor="@color/text_third_999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/m_receive_address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="收货地址"
            android:textColor="@color/text_black_333333"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/m_distance_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_receive_address_ll"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全程："
            android:textColor="@color/text_third_999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/m_distance_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0km"
            android:textColor="@color/text_black_333333"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/m_goods_type_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_distance_ll"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物品："
            android:textColor="@color/text_third_999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/m_goods_type_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="文件/1kg"
            android:textColor="@color/text_black_333333"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/m_look_logistics_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_goods_type_ll"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/bg_look_logistics"
        android:paddingHorizontal="20dp"
        android:paddingVertical="7dp"
        android:text="查看物流"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>