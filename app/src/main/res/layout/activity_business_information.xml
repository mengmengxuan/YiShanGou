<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <View
        android:background="@color/color_F36C17"
        android:layout_width="match_parent"
        android:layout_height="97dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/common_title"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/shape_white_rect_10"
                android:paddingTop="15dp"
                android:paddingBottom="17dp"
                android:paddingLeft="13dp"
                android:paddingRight="9dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/m_merchant_logo_iv"
                    android:src="@mipmap/image_template"
                    android:layout_marginRight="14dp"
                    android:layout_width="59dp"
                    android:layout_height="59dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/m_merchant_name_tv"
                            android:textStyle="bold"
                            android:text="华润苏果（望江路店）"
                            android:textColor="@color/color_161616"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/m_connect_merchant_tv"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:text="拨打电话"
                            android:textColor="@color/color_2686F2"
                            android:drawableLeft="@mipmap/icon_phone"
                            android:drawablePadding="6dp"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/m_monthly_sale_tv"
                            android:text="月售1053"
                            android:textColor="@color/color_666666"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="同城配送"
                            android:layout_marginLeft="26dp"
                            android:layout_marginRight="30dp"
                            android:textColor="@color/color_666666"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/m_distance_tv"
                            android:text="5.0km"
                            android:textColor="@color/color_666666"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/m_address_tv"
                android:text="安徽省合肥市望江西路与潜山路东南角100米华润苏果"
                android:textColor="@color/color_2D332D"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:paddingVertical="20dp"
                android:paddingLeft="13dp"
                android:paddingRight="86dp"
                android:drawableLeft="@mipmap/icon_business_information_address"
                android:drawablePadding="13dp"
                android:background="@drawable/shape_white_rect_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:id="@+id/m_business_aptitude_rl"
                android:layout_marginTop="4dp"
                android:paddingVertical="18dp"
                android:paddingLeft="13dp"
                android:paddingRight="15dp"
                android:background="@drawable/shape_white_rect_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:text="查看商家资质"
                    android:textColor="@color/color_2D332D"
                    android:textSize="13sp"
                    android:drawableLeft="@mipmap/icon_business_information_aptitude"
                    android:drawablePadding="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/m_delivery_service_tv"
                android:text="配送服务：由本APP提供配服务"
                android:textColor="@color/color_2D332D"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:paddingVertical="20dp"
                android:paddingLeft="13dp"
                android:paddingRight="86dp"
                android:drawableLeft="@mipmap/icon_service"
                android:drawablePadding="13dp"
                android:background="@drawable/shape_white_rect_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <TextView
                android:id="@+id/m_work_time_tv"
                android:text="营业时间：07:00-23:00"
                android:textColor="@color/color_2D332D"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:paddingVertical="20dp"
                android:paddingLeft="13dp"
                android:paddingRight="86dp"
                android:drawableLeft="@mipmap/icon_business_information_time"
                android:drawablePadding="13dp"
                android:background="@drawable/shape_white_rect_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>