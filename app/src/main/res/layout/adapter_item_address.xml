<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/m_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:text=""
        android:textColor="@color/text_black_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/m_phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/m_name_tv"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@id/m_name_tv"
        android:text=""
        android:textColor="@color/text_third_999999"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/m_default_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/m_name_tv"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/m_phone_tv"
        android:background="@drawable/shape_f36c17_rect_3"
        android:paddingLeft="7dp"
        android:paddingTop="3dp"
        android:paddingRight="7dp"
        android:paddingBottom="3dp"
        android:text="默认"
        android:textColor="@color/color_F36C17"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/m_edit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/m_delete_tv"
        android:drawableLeft="@mipmap/icon_address_edit"
        android:drawablePadding="5dp"
        android:text="编辑"
        android:textColor="@color/text_third_999999" />

    <TextView
        android:id="@+id/m_delete_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/m_name_tv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:drawableLeft="@mipmap/btn_delete_red"
        android:drawablePadding="5dp"
        android:text="删除"
        android:textColor="@color/text_third_999999" />

    <TextView
        android:id="@+id/m_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_name_tv"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="17dp"
        android:text=""
        android:textColor="@color/text_black_333333"
        android:textSize="13sp" />

    <View
        android:id="@+id/part_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/m_address_tv"
        android:background="@color/color_EEEEEE" />


</RelativeLayout>