<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/shape_white_rect_10">

    <ImageView
        android:id="@+id/m_merchant_logo_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginVertical="14dp"
        android:layout_marginLeft="14dp"
        android:scaleType="centerCrop" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@id/m_merchant_logo_iv">

        <TextView
            android:id="@+id/m_merchant_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家名称"
            android:textColor="@color/text_black_161616"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/m_monthly_sale_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m_merchant_name_tv"
            android:layout_alignLeft="@id/m_merchant_name_tv"
            android:layout_marginVertical="10dp"
            android:text="月售0"
            android:textColor="@color/text_black_666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/m_initial_delivery_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m_monthly_sale_tv"
            android:layout_alignLeft="@id/m_merchant_name_tv"
            android:text="起送￥0.0"
            android:textColor="@color/text_black_666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/m_delivery_fee_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/m_initial_delivery_tv"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_toRightOf="@id/m_initial_delivery_tv"
            android:text="配送费￥0.0"
            android:textColor="@color/text_black_666666"
            android:textSize="13sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/m_distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/m_merchant_logo_iv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:text="0.0km"
        android:textColor="@color/text_black_666666"
        android:textSize="13sp" />


</RelativeLayout>