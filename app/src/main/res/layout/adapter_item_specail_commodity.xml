<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:background="@drawable/shape_white_rect_10"
    android:paddingHorizontal="9dp">

    <ImageView
        android:id="@+id/m_product_pic_iv"
        android:layout_width="@dimen/dp_68"
        android:layout_height="@dimen/dp_68"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/m_product_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_product_pic_iv"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="商品名称"
        android:textColor="@color/text_black_333333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/m_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_product_name_tv"
        android:layout_marginTop="10dp"
        android:text="￥0.0"
        android:textColor="@color/color_FF420C"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/m_immediately_buy_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_price_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="8dp"
        android:background="@drawable/shape_orange_rect_gradient_12"
        android:paddingLeft="@dimen/dp_22"
        android:paddingTop="4dp"
        android:paddingRight="@dimen/dp_22"
        android:paddingBottom="4dp"
        android:text="立即抢购"
        android:textColor="@color/white"
        android:textSize="12sp" />


</RelativeLayout>