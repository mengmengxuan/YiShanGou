<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/shape_white_rect_10"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_23">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp20">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="配送价格"
                            android:textColor="@color/color_999999"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/m_delivery_price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="￥0"
                            android:textColor="@color/color_F36C17"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="距离你"
                            android:textColor="@color/color_999999"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/m_distance_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="0.0km"
                            android:textColor="@color/color_F36C17"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发布时间"
                            android:textColor="@color/color_999999"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/m_publish_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="刚刚"
                            android:textColor="@color/color_F36C17"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25">

                    <TextView
                        android:id="@+id/m_deliver_desc_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/shape_blue_circle"
                        android:gravity="center"
                        android:text="发"
                        android:textColor="@color/white"
                        android:textSize="12sp" />


                    <RelativeLayout
                        android:id="@+id/m_delivery_info_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_toRightOf="@id/m_deliver_desc_tv">

                        <TextView
                            android:id="@+id/m_delivery_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发货人姓名"
                            android:textColor="@color/text_black_333333"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/m_delivery_phone_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="9dp"
                            android:layout_toRightOf="@id/m_delivery_name_tv"
                            android:text="13900001111"
                            android:textColor="@color/color_03A4FA"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/m_call_delivery_phone_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="9dp"
                            android:layout_toRightOf="@id/m_delivery_phone_tv"
                            android:src="@mipmap/icon_call_phone_blue" />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/m_delivery_address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/m_delivery_info_rl"
                        android:layout_alignLeft="@id/m_delivery_info_rl"
                        android:layout_marginTop="8dp"
                        android:text="发货人地址"
                        android:textColor="@color/color_666666"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/m_delivery_address_tv"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_28"
                        android:src="@mipmap/icon_address_blue" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/m_delivery_address_tv"
                        android:layout_alignLeft="@id/m_delivery_info_rl"
                        android:layout_marginTop="8dp"
                        android:background="@color/color_E5E5E5" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_22">

                    <TextView
                        android:id="@+id/m_receive_desc_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/shape_green_circle"
                        android:gravity="center"
                        android:text="收"
                        android:textColor="@color/white"
                        android:textSize="12sp" />


                    <RelativeLayout
                        android:id="@+id/m_receive_info_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_toRightOf="@id/m_receive_desc_tv">

                        <TextView
                            android:id="@+id/m_receive_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货人姓名"
                            android:textColor="@color/text_black_333333"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/m_receive_phone_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="9dp"
                            android:layout_toRightOf="@id/m_receive_name_tv"
                            android:text="13900001111"
                            android:textColor="@color/color_03A4FA"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/m_call_receive_phone_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="9dp"
                            android:layout_toRightOf="@id/m_receive_phone_tv"
                            android:src="@mipmap/icon_call_phone_blue" />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/m_receive_address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/m_receive_info_rl"
                        android:layout_alignLeft="@id/m_receive_info_rl"
                        android:layout_marginTop="8dp"

                        android:text="发货人地址"
                        android:textColor="@color/color_666666"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/m_receive_address_tv"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_28"
                        android:src="@mipmap/icon_address_blue" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/shape_white_rect_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/m_business_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="12dp"
                    android:drawableRight="@mipmap/icon_right"
                    android:drawablePadding="12dp"
                    android:text=""
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F4F4F4" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/m_order_food_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#F4F4F4" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="10dp"
                        android:text="打包费"
                        android:textColor="@color/color_333333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/m_packing_fee_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:text="￥"
                        android:textColor="@color/color_333333"
                        android:textSize="13sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:text="配送费"
                        android:textColor="@color/color_333333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/m_delivery_fee_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:text="￥0.0"
                        android:textColor="@color/color_333333"
                        android:textSize="13sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="备注"
                        android:textColor="@color/color_333333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/m_remark_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:textColor="@color/color_666666"
                        android:textSize="12sp" />

                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/m_commit_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_26"
                android:background="@drawable/shape_orange_rect_22"
                android:gravity="center"
                android:paddingVertical="15dp"
                android:text="确定抢单"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>