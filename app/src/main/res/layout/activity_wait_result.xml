<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/common_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/shape_white_rect_10"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/icon_wait"
                android:id="@+id/m_icon_iv"
                android:layout_width="106dp"
                android:layout_height="106dp"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/m_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="17dp"
                android:text="等待中"
                android:textColor="@color/color_060606"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/m_reason_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginBottom="17dp"
                android:gravity="center"
                android:text="已提交至系统任务大厅，请耐心等候骑手接单"
                android:textColor="@color/color_999999"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/m_push_again_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="52dp"
        android:background="@drawable/btn_login"
        android:gravity="center"
        android:paddingHorizontal="127dp"
        android:paddingVertical="15dp"
        android:text="重新上传"
        android:textColor="@color/white"
        android:textSize="15.5dp" />
</RelativeLayout>