<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_white_rect_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginRight="34dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="18dp"
                        android:background="@drawable/bg_circle_blue"
                        android:gravity="center"
                        android:text="发"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/m_from_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/m_send_name_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="发货人姓名"
                                android:textColor="@color/color_333333"
                                android:textColorHint="@color/color_333333"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/m_send_phone_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:text="15956969696"
                                android:textColor="@color/color_999999"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/m_send_address_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@null"
                            android:text="发货人地址"
                            android:textColor="@color/color_666666"
                            android:textColorHint="@color/color_999999"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="22dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:src="@mipmap/btn_exchange" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@color/color_E5E5E5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="34dp"
                    android:layout_marginBottom="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="18dp"
                        android:background="@drawable/bg_circle_green"
                        android:gravity="center"
                        android:text="收"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/m_to_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/m_receive_name_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="收货人姓名"
                                android:textColor="@color/color_333333"
                                android:textColorHint="@color/color_333333"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/m_receive_phone_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:text="15956969696"
                                android:textColor="@color/color_999999"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/m_receive_address_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@null"
                            android:text="收货人地址"
                            android:textColor="@color/color_666666"
                            android:textColorHint="@color/color_999999"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_white_rect_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_25"
                    android:layout_marginLeft="16dp"
                    android:text="总路程"
                    android:textColor="@color/text_black_333333"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/m_total_distance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:text="0.0公里"
                    android:textColor="@color/text_black_333333"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/m_weight_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_white_rect_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_25"
                    android:layout_marginLeft="16dp"
                    android:text="重量"
                    android:textColor="@color/text_black_333333"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp">

                    <ImageView
                        android:id="@+id/m_less_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dp_25"
                        android:paddingRight="@dimen/dp20"
                        android:src="@mipmap/icon_less_goods" />

                    <TextView
                        android:id="@+id/m_weight_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="1"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dp_25"
                        android:text="kg"
                        android:textColor="@color/text_black_333333"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/m_add_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dp_25"
                        android:paddingLeft="@dimen/dp20"
                        android:src="@mipmap/icon_add_goods" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_white_rect_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_25"
                    android:layout_marginLeft="16dp"
                    android:text="总金额"
                    android:textColor="@color/text_black_333333"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/m_total_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:text="￥0.0"
                    android:textColor="@color/color_F3172C"
                    android:textSize="22sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_white_rect_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_25"
                    android:layout_marginLeft="16dp"
                    android:text="备注"
                    android:textColor="@color/text_black_333333"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/m_remark_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:text=""
                    android:textColor="@color/text_black_333333"
                    android:textSize="15sp" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/m_commit_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp_42"
            android:background="@drawable/btn_login"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="15.5dp" />

    </RelativeLayout>


</LinearLayout>