<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp">

    <ImageView
        android:id="@+id/m_goods_logo_iv"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:scaleType="centerCrop" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/m_goods_logo_iv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/m_goods_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/m_monthly_sale_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="月销0"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/m_goods_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.0"
                android:textColor="@color/color_F14C14"
                android:textSize="16sp" />
            <!--
                        <ImageView
                            android:id="@+id/m_add_goods_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="12dp"
                            android:src="@mipmap/icon_add_goods" />-->

            <LinearLayout
                android:id="@+id/m_count_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/m_less_goods_iv"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:gravity="center"
                    android:src="@mipmap/icon_less_goods"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/m_goods_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/text_black_333333"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/m_add_goods_iv"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:gravity="center"
                    android:src="@mipmap/icon_add_goods"
                    android:textColor="@color/text_black_333333"
                    android:textSize="20sp" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>