<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/m_account_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="0"
            android:textColor="@color/color_666666"
            android:textSize="13sp" />

        <TextView

            android:id="@+id/m_status_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="状态"
            android:textColor="@color/color_666666"
            android:textSize="13sp" />
        <LinearLayout
            android:id="@+id/m_fail_ll"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:paddingVertical="4dp"
                android:id="@+id/m_defeat_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="状态"
                android:textColor="@color/color_FF4545"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/m_reason_tv"
                android:paddingVertical="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="失败原因"
                android:textColor="@color/color_FF4545"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/m_time_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="22:00:00"
            android:textColor="@color/color_666666"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</RelativeLayout>